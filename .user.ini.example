; PHP Configuration for GRPG v2
; This file can be used as .user.ini (for PHP-FPM) or included in php.ini
; Place this file as .user.ini in the web root to apply these settings

; Security: Hide PHP version in HTTP headers
expose_php = Off

; Additional security settings (optional but recommended)
; Disable dangerous functions (adjust based on your needs)
; disable_functions = exec,passthru,shell_exec,system,proc_open,popen,curl_exec,curl_multi_exec,parse_ini_file,show_source

; Session security
session.cookie_httponly = 1
; IMPORTANT: session.cookie_secure must only be enabled if your site is served over HTTPS.
; Enabling this on an HTTP site will prevent sessions from working (cookies won't be sent),
; which will break CSRF protection and cause "Security Error" messages on all forms.
; Set to 1 ONLY for HTTPS sites:
session.cookie_secure = 0
session.use_only_cookies = 1
session.use_strict_mode = 1

; Error handling (production)
display_errors = Off
log_errors = On
error_reporting = E_ALL

; File upload limits
upload_max_filesize = 10M
post_max_size = 10M

; Memory and execution limits
memory_limit = 256M
max_execution_time = 60
